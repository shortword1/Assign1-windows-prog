<Window x:Class="Assign1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MP3 Player and Tagger" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <!-- For MediaElement -->
            <RowDefinition Height="*"/>
            <!-- For Metadata, Controls, and Progress Bar -->
        </Grid.RowDefinitions>

        <!-- Menu for File and Playback Controls -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Open" Click="OpenFile_Click"/>
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Playback">
                <MenuItem Header="Play" Click="Play_Click"/>
                <MenuItem Header="Pause" Click="Pause_Click"/>
                <MenuItem Header="Stop" Click="Stop_Click"/>
            </MenuItem>
        </Menu>

        <!-- MediaElement for the Upper Half -->
        <MediaElement Grid.Row="0" Name="mediaPlayer" LoadedBehavior="Manual" UnloadedBehavior="Stop" Stretch="Fill"/>

        <!-- Lower Half for Metadata, Controls, and Progress Bar -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Vertical" Margin="5">
                <StackPanel Orientation="Horizontal" Margin="5">
                    <Button Content="Play" Click="Play_Click"/>
                    <Button Content="Pause" Click="Pause_Click" Margin="5,0"/>
                    <Button Content="Stop" Click="Stop_Click" Margin="5,0"/>
                </StackPanel>

                <Slider Name="progressBar" Margin="5" Value="0" Maximum="100"/>

                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>

                    <!-- Metadata Labels and TextBoxes for Title and Artist -->
                    <Label Grid.Row="0" Grid.Column="0" Content="Title:" Margin="5"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Name="TitleTextBox" Margin="5"/>
                    <Label Grid.Row="1" Grid.Column="0" Content="Artist:" Margin="5"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Name="ArtistTextBox" Margin="5"/>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="5">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>

                    <!-- Metadata Labels and TextBoxes for Album and Year -->
                    <Label Grid.Row="0" Grid.Column="0" Content="Album:" Margin="5"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Name="AlbumTextBox" Margin="5"/>
                    <Label Grid.Row="1" Grid.Column="0" Content="Year:" Margin="5"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Name="YearTextBox" Margin="5"/>
                </Grid>
                <Button Content="Save Tags" Click="SaveTags_Click" HorizontalAlignment="Center" Margin="5"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
